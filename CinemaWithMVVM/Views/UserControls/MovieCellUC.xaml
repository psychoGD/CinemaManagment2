<UserControl x:Class="CinemaWithMVVM.Views.UserControls.MovieCellUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaWithMVVM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>

        <Rectangle Fill="DeepSkyBlue" RadiusX="20" RadiusY="20" >

        </Rectangle>

        <Canvas>
            <Image Source="{Binding Movie.ImagePath}" Canvas.Left="20" Canvas.Top="20" Width="100" Height="120" ></Image>

            <TextBlock TextWrapping="Wrap" FontSize="24" FontWeight="ExtraBold" Foreground="White" 
                       FontFamily="Comic Sans MS" Canvas.Top="150" Canvas.Left="20" 
                       Text="{Binding Movie.Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBlock>
            
            <TextBlock Text="{Binding Movie.Description,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" 
                       Width="150" FontSize="14" FontWeight="ExtraBold" Foreground="White" FontFamily="Comic Sans MS" Canvas.Top="25" Canvas.Right="20"></TextBlock>
            <StackPanel Canvas.Top="70" Canvas.Left="130" Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" FontSize="12" FontWeight="ExtraBold" Foreground="White" FontFamily="Comic Sans MS" Canvas.Top="25" Canvas.Right="20">Imdb : </TextBlock>
                <TextBlock TextWrapping="Wrap" FontSize="12" FontWeight="ExtraBold" Foreground="White" FontFamily="Comic Sans MS" Canvas.Top="25" Canvas.Right="20" Text="{Binding Movie.Rating,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBlock>

            </StackPanel>
            <WrapPanel Name="starsPanel" Orientation="Horizontal" Canvas.Top="90" Canvas.Left="125" Panel.ZIndex="10">

            </WrapPanel>

        </Canvas>
    </Grid>
</UserControl>
